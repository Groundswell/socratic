#new_question.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				%button.close{ type: :button, 'data-dismiss' => 'modal', 'aria-hidden' => 'true' }
					&times;
				%h4.modal-title
					New Question
			= form_for Socratic::Question.new, url: question_admin_index_path do |f|
				= f.hidden_field :survey_id, value: args[:survey_id]
				.modal-body
					.form-group
						= f.label :label
						= f.text_field :label, class: 'form-control'
					.form-group
						= f.label :content
						= f.text_area :content, class: 'form-control'

				.modal-footer
					%button.btn.btn-default{ type: :button, 'data-dismiss' => 'modal' }
						Close
					= f.submit 'Create', class: 'btn btn-primary'