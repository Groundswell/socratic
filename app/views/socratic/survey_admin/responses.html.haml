



.container-fluid
	.row
		.col-xs-10
			%ul.breadcrumb
				%li
					%a{ href: '/admin' }
						Admin
				%li
					= link_to 'Survey Admin', survey_admin_index_path
				%li
					%a{ href: edit_survey_admin_path( @survey ) }
						Edit
						= @survey.title
				%li
					%strong
						Responses
						= "(#{pluralize @surveyings.total_count, 'Response'})"
		.col-xs-2
			%a.btn.btn-success{ href: responses_survey_admin_path( @survey, format: :csv, params: request.query_parameters ) }
				%i.fa.fa-download
				CSV
			
	.row
		.col-xs-6
			= raw paginate @surveyings
		.col-xs-6
			= form_tag responses_survey_admin_path( @survey ), method: :get, class: 'pull-right form-inline' do
				= select_tag :status, options_from_collection_for_select( Socratic::Surveying.statuses, :first, :first, params[:status] ), { prompt: "-- All --", class: 'form-control' }
				= submit_tag 'Search', class: 'btn btn-primary'

	.row
		.col-xs-12
			%table.table
				%thead
					%th
						User
					%th
						First Name
					%th
						Last Name
					%th
						Status
						%a{ href: responses_survey_admin_path( @survey, sort_by: 'status', sort_dir: 'asc' ) }
							%i.fa.fa-arrow-up
						%a{ href: responses_survey_admin_path( @survey, sort_by: 'status', sort_dir: 'desc' ) }
							%i.fa.fa-arrow-down
					%th
						Created
						%a{ href: responses_survey_admin_path( @survey, sort_by: 'created_at', sort_dir: 'asc' ) }
							%i.fa.fa-arrow-up
						%a{ href: responses_survey_admin_path( @survey, sort_by: 'created_at', sort_dir: 'desc' ) }
							%i.fa.fa-arrow-down
					%th
						Completed
						%a{ href: responses_survey_admin_path( @survey, sort_by: 'completed_at', sort_dir: 'asc' ) }
							%i.fa.fa-arrow-up
						%a{ href: responses_survey_admin_path( @survey, sort_by: 'completed_at', sort_dir: 'desc' ) }
							%i.fa.fa-arrow-down
					%th
				%tbody
					- @surveyings.each do |surveying|

						%tr
							%td
								= surveying.user.try( :email )
							%td
								= surveying.user.try( :first_name )
							%td
								= surveying.user.try( :last_name )
							%td
								= surveying.status
							%td
								= surveying.created_at
							%td
								= surveying.completed_at

							%td
								.btn-group
									%button.btn.btn-mini.btn-default.dropdown-toggle{ data: { toggle: :dropdown } }
										%i.fa.fa-cog
										%b.caret
									%ul.dropdown-menu
										%li
											%a{ href: surveying_admin_path( surveying ) }
												%i.fa.fa-eye
												View
										%li.divider
										%li
											%a{ href: surveying_admin_path( surveying ), data: { method: 'delete', confirm: 'Are you sure?' } }
												%i.fa.fa-trash-o
												Delete!
				
					

	.row
		.col
			= raw paginate @surveyings


